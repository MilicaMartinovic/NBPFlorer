<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.milica.nbp_florer.PlantUploadActivity">

    <ImageView
        android:id="@+id/plantView"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/ImgDesc"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/linijicaaaaa"
        android:background="@color/colorPrimary"
        android:layout_below="@id/plantView"/>

    <EditText
        android:id="@+id/txtLatinskiNaziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:hint="@string/plant_name"
        android:textColorHint="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linijicaaaaa"
        android:layout_marginTop="20dp"/>
    <!--  android:theme="@style/EditTextTheme" -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_above="@id/btnUploadImage"/>

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="upload"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
